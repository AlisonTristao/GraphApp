<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.androidplot.xy.XYPlot
            android:layout_margin="10dp"
            style="@style/APDefacto.Dark"
            android:id="@+id/grafico"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"

            app:title="Dados recebidos por Bluetooth"
            app:rangeTitle="Imagem"
            app:domainTitle="Dominio"
            app:lineLabels="left|bottom"
            app:lineLabelRotationBottom="-45">
        </com.androidplot.xy.XYPlot>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardBtConf"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="left"
        card_view:cardBackgroundColor="#AAAAAAAA"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/btnConf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trasparente"
            android:textColor="@color/black"
            android:text="@string/config" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardRol"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="left"
        card_view:cardBackgroundColor="#AAAAAAAA"
        tools:ignore="RtlHardcoded">


        <Switch
            android:layout_margin="5dp"
            android:id="@+id/swtRol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/rolar"
            android:textColor="@color/white"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardLimpar"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_gravity="left"
        card_view:cardBackgroundColor="#AAAAAAAA"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/limpar"
            android:background="@color/trasparente"
            android:textColor="@color/black"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardConf"
        android:layout_width="280dp"
        android:layout_height="385dp"
        android:layout_gravity="center|center"
        android:background="@color/ap_transparent">

        <Button
            android:id="@+id/fechar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/ap_transparent"
            android:layout_marginStart="210dp"
            />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ke"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            />

        <EditText
            android:id="@+id/txtKe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kd1"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            />

        <EditText
            android:id="@+id/txtKd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ki"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            />

        <EditText
            android:id="@+id/txtKi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"/>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/velocidade1"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="230dp"
            />

        <EditText
            android:id="@+id/txtVelocidade"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="130dp"
            android:layout_marginTop="220dp"/>

        <Button
            android:id="@+id/btnBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btnEnviarCons"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/enviar_constantes"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"/>

        <Button
            android:id="@+id/btnCopiar"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/copiar_resultado"
            android:layout_marginTop="330dp"
            android:layout_gravity="center_horizontal"
            />
    </androidx.cardview.widget.CardView>

</FrameLayout>